---
// Generamos una lista de videos de ejemplo (las rutas apuntan a `public/videos` y `public/thumbnails`)
const videos = Array.from({ length: 23 }).map((_, i) => ({
	id: i + 1,
	title: `Sample video ${i + 1}`,
	src: `/videos/sample_${(i % 5) + 1}.mp4`,
	thumbnail: `/thumbnails/thumb_${(i % 5) + 1}.jpg`
}));
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Video Player</title>
		<link rel="stylesheet" href="/styles.css">
	</head>
	<body>
		<main class="container">
			<h1>Video Player</h1>

			<section class="layout">
				<aside class="sidebar">
					<h2>Videos</h2>
					<ul id="video-list">
						{videos.map(video => (
							<li class="video-item" data-id={video.id} data-src={video.src} tabindex="0">
								<img src={video.thumbnail} alt={video.title} class="thumb" />
								<div class="meta">
									<strong>{video.title}</strong>
								</div>
							</li>
						))}
					</ul>

					<nav class="pagination" id="pagination"></nav>
				</aside>

				<section class="player">
					<h2 id="player-title">Select a video</h2>
					<video id="video-player" controls preload="metadata" width="720">
						<source id="video-source" src="" type="video/mp4" />
						Your browser does not support the video tag.
					</video>

					<div class="controls">
						<button id="play-pause">Play/Pause</button>
						<button id="mute-toggle">Mute</button>
						<label>Vol: <input id="volume" type="range" min="0" max="1" step="0.05" value="1"></label>
						<button id="speed-down">-</button>
						<span id="speed">1x</span>
						<button id="speed-up">+</button>
					</div>
				</section>
			</section>
		</main>

		<script type="module" src="/js/app.js"></script>
	</body>
</html>
